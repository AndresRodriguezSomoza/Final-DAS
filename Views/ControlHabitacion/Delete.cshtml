@model DAS_Final.Models.Habitacion

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<h1>Eliminar Habitación</h1>

<h3>¿Estás seguro que quieres eliminar esta habitación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Imagen:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Img))
            {
                    <img src="~/Img/@Model.Img" alt="Imagen habitación" style="max-width: 200px; max-height: 150px;" class="img-thumbnail" />
            }
            else
            {
                    <span class="text-muted">Sin imagen</span>
            }
        </dd>

        <dt class="col-sm-2">Número:</dt>
        <dd class="col-sm-10">@Model.NumeroHabitacion</dd>

        <dt class="col-sm-2">Tipo:</dt>
        <dd class="col-sm-10">@Model.TipoHabitacion</dd>

        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</dd>

        <dt class="col-sm-2">Precio/Noche:</dt>
        <dd class="col-sm-10">@Model.PrecioNoche.ToString("C")</dd>

        <dt class="col-sm-2">Capacidad:</dt>
        <dd class="col-sm-10">@Model.Capacidad personas</dd>

        <dt class="col-sm-2">Estatus:</dt>
        <dd class="col-sm-10">@Model.Estatus</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>