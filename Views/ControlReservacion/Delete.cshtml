@model DAS_Final.Models.Reservacion

@{
    ViewData["Title"] = "Eliminar Reservación";
}

<h1>Eliminar Reservación</h1>

<h3>¿Estás seguro que quieres eliminar esta reservación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-2">Habitación:</dt>
        <dd class="col-sm-10">@Model.Habitacion.NumeroHabitacion</dd>

        <dt class="col-sm-2">Fecha Entrada:</dt>
        <dd class="col-sm-10">@Model.FechaEntrada.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha Salida:</dt>
        <dd class="col-sm-10">@Model.FechaSalida.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10">@Model.TotalHabitacion.ToString("C")</dd>

        <dt class="col-sm-2">Estatus:</dt>
        <dd class="col-sm-10">@Model.Estatus</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>