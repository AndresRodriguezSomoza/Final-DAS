@model DAS_Final.Models.Reservacion

@{
    ViewData["Title"] = "Detalles de la Reservación";
}

<h1>Detalles de la Reservación</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-2">Habitación:</dt>
        <dd class="col-sm-10">@Model.Habitacion.NumeroHabitacion</dd>

        <dt class="col-sm-2">Precio por Noche:</dt>
        <dd class="col-sm-10">@Model.Habitacion.PrecioNoche.ToString("C")</dd>

        <dt class="col-sm-2">Fecha Entrada:</dt>
        <dd class="col-sm-10">@Model.FechaEntrada.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha Salida:</dt>
        <dd class="col-sm-10">@Model.FechaSalida.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Noches:</dt>
        <dd class="col-sm-10">@((Model.FechaSalida - Model.FechaEntrada).Days) noches</dd>

        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10 fw-bold">@Model.TotalHabitacion.ToString("C")</dd>

        <dt class="col-sm-2">Estatus:</dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Estatus == "confirmada" ? "bg-success" : 
                              Model.Estatus == "activa" ? "bg-primary" :
                              Model.Estatus == "pendiente" ? "bg-warning" :
                              Model.Estatus == "completada" ? "bg-secondary" : 
                              "bg-danger")">
                @Model.Estatus
            </span>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>