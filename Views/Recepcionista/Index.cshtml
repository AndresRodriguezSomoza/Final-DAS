@model IEnumerable<DAS_Final.Models.Reservacion>

@{
    ViewData["Title"] = "Gestión de Reservaciones - Recepcionista";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Gestión de Reservaciones</h2>

            @if (TempData["Success"] != null)
            {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
            }

            @if (TempData["Error"] != null)
            {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
            }

            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Lista de Reservaciones</h5>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nueva Reservación
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Usuario</th>
                                    <th>Habitación</th>
                                    <th>Fecha Entrada</th>
                                    <th>Fecha Salida</th>
                                    <th>Total</th>
                                    <th>Estatus</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                        <tr>
                                            <td>@item.Usuario?.Nombre</td>
                                            <td>@item.Habitacion?.NumeroHabitacion</td>
                                            <td>@item.FechaEntrada.ToString("dd/MM/yyyy")</td>
                                            <td>@item.FechaSalida.ToString("dd/MM/yyyy")</td>
                                            <td>@item.TotalHabitacion.ToString("C")</td>
                                            <td>
                                                <span class="badge 
                                                @(item.Estatus == "activa" ? "bg-success" : 
                                                  item.Estatus == "pendiente" ? "bg-warning" : 
                                                  item.Estatus == "completada" ? "bg-info" : "bg-secondary")">
                                                @item.Estatus
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-info btn-sm" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                @if (item.Estatus == "pendiente")
                                                {
                                                            <a asp-action="CheckIn" asp-route-id="@item.Id" 
                                                               class="btn btn-success btn-sm" title="Check-in">
                                                                <i class="fas fa-sign-in-alt"></i>
                                                            </a>
                                                }
                                                else if (item.Estatus == "activa")
                                                {
                                                            <a asp-action="CheckOut" asp-route-id="@item.Id" 
                                                               class="btn btn-primary btn-sm" title="Check-out">
                                                                <i class="fas fa-sign-out-alt"></i>
                                                            </a>
                                                }
                                                </div>
                                            </td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
